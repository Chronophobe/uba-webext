{
    "manifest_version": 2,
    "name": "UBA Linker",
    "version": "1.0",

    "Description": "Replaces the current URL with the UBA proxy one.",
    "icons": {
        "48": "icons/uba.png"
    },

    "permissions": ["active_tab", "tabs"],

    "browser_action": {
        "default_icon": "icons/uba.png",
        "default_title": "UBA"
    },

    "background": {
        "scripts": ["background.js"]  
    }
}
